            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/job/JOB_ID_HERE",
              "host": ["{{base_url}}"],
              "path": ["job", "JOB_ID_HERE"]
            }
          }
        },
        {
          "name": "Update Job",
          "request": {
            "method": "PUT",
