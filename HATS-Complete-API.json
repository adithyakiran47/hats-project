            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Lead Backend Developer\",\n  \"jobType\": \"technical\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/job/update/JOB_ID_HERE",
              "host": ["{{base_url}}"],
              "path": ["job", "update", "JOB_ID_HERE"]
            }
          }
        },
        {
          "name": "Delete Job",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
