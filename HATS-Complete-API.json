    {
      "name": "2. Job Management (Admin Only)",
      "item": [
        {
          "name": "Create Job",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Senior Backend Developer\",\n  \"jobType\": \"technical\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/job/create",
              "host": ["{{base_url}}"],
              "path": ["job", "create"]
            }
          }
        },
        {
          "name": "Get All Jobs",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
